# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=1
FLASK_HOST=0.0.0.0
FLASK_PORT=8000

# Security
SECRET_KEY=your-super-secret-key-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production

# Database
DATABASE_URL=sqlite:///sargam.db
# For production, use PostgreSQL:
# DATABASE_URL=postgresql://user:password@localhost:5432/sargam

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Redis (optional, for production WebSocket scaling)
# REDIS_URL=redis://localhost:6379/0

# External APIs (optional)
# AudD Music Recognition API - Get a free trial key at https://audd.io/
# AUDD_API_KEY=your-audd-api-key

# Anthropic Claude API - For AI-powered song recognition from melody patterns
# Get a key at https://console.anthropic.com/
# ANTHROPIC_API_KEY=your-anthropic-api-key
